<h2>High severity bugs</h2>

<% if @high_severity_bugs.any? %>
  <table class="bugs-table">
    <thead>
      <tr>
        <th>Trello ID</th>
        <th class="description-col">Description</th>
        <th>Severity</th>
        <th>Date raised</th>
        <th>Planned for release</th>
        <th>Workaround</th>
      </tr>
    </thead>
    <tbody>
      <% @high_severity_bugs.each do |card| %>
        <tr>
          <td><%= card.trello_card.short_id %></td>
          <td class="description-col"><a href="<%= card.url %>"><%= card.name %></a></td>
          <td><%= card.severity %></td>
          <td><%= card.created_at.to_date %></td>
          <td><%= card.planned_release %></td>
          <td class="description-col"><%= card.workaround if card.workaround.present? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No high severity bugs found.</p>
<% end %>

<style>
  .bugs-table .description-col {
    width: 300px;
    max-width: 300px;
    word-wrap: break-word;
    white-space: normal;
  }
</style>
